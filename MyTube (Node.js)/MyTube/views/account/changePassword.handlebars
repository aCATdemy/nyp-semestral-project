<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <div class="align-items-center">
            <div class="my-3 text-center">
                <img src="/images/logo.png" alt="logo.png" class="mb-3" id="account-logo">
                <h6 class="fw-bold">MyTube ID</h6>
            </div>
            <div class="my-3">
                <h3 class="fw-bold text-center my-4">Change Password</h3>
                <form action="" method="post">
                    {{!-- New Password --}}
                    <div class="form-floating mb-3 mx-auto">
                        <input type="password" name="password" class="form-control" id="password" placeholder="New Password" required>
                        <label for="password">New Password</label>
                    </div>

                    {{!-- Confirm New Password --}}
                    <div class="form-floating mb-3 mx-auto">
                        <input type="password" name="password2" class="form-control" id="password2" placeholder="Confirm New Password" required>
                        <label for="password2">Confirm New Password</label>
                    </div>

                    <div class="mb-4">
                        <small class="fw-bold">Your new password is effective immediately upon amendment.</small>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mx-auto">
                        <a href="javascript:history.back()">
                            <button type="button" class="btn btn-link shadow-none">Cancel</button>
                        </a>

                        {{!-- Update Password Button --}}
                        <button type="submit" class="btn btn-success shadow-none">Update Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>