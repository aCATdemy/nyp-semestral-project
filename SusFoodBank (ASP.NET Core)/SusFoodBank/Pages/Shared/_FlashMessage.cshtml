@{
    string? text = Convert.ToString(TempData["FlashMessage.Text"]);
    string? cssClass = string.Format("alert alert-{0} alert-dismissible fade show mb-3", Convert.ToString(TempData["FlashMessage.Type"]));
}

@if (!string.IsNullOrWhiteSpace(text))
{
    <div class="@cssClass" role="alert">
        <p class="mb-0">@text</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close alert dialog"></button>
    </div>
}
