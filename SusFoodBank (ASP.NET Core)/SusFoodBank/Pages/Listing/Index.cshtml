@page
@model SusFoodBank.Pages.Listing.IndexModel
@{
    ViewData["Title"] = "Listings";
}
<div class="container-sm">
    <br>
<h1 class="display-4">@ViewData["Title"]</h1>

<table class="table mt-3">
   <thead>

       <tr>
            <th>Product image</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Contact)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Location)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Expiry)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Halal)</th>
       </tr>
   </thead>
   <tbody>
        @{
            @foreach (var item in Model.Items)
            {
                string checkboxDisplay = item.Halal ? "Yes" : "No";
                    
                        <tr>
                            <td>
                                <img src="@item.ImageFile" alt="Image" width="100" height="100" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Contact</td>
                            <td>@item.Location</td>
                            <td>@item.Expiry</td>
                            <td>@checkboxDisplay</td>
                            <td>
                                <a asp-page="Details" asp-route-id="@item.Id">Edit</a>
                            </td>
                        </tr>
            }
        }
   </tbody>
</table>

<a class="btn btn-primary mt-3" href="/listing/create">Make listing</a>
</div>