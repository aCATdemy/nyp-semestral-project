@page
@model SusFoodBank.Pages.Feedback.LocationDetailsModel
@{
}


<br />
<br />
<div class="text-center">
    <h1>Changed your mind? <br /> Update/delete your location(s) here</h1><br />
</div>

<div class="text-center">
    <h3>

        Click here to view all locations

        <a class="btn btn-secondary ms-3" asp-page="/feedback/ViewLocations">Back</a>

    </h3>
</div>

<div class="container-sm" style="margin-top:25px">
    <div class="col-sm-6" style="margin-top:25px">
        <form class="mt-3" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row mb-3" hidden>
                <label class="col-sm-2 col-form-label" asp-for="locations.Id" hidden></label>
                <div class="col-sm-10" hidden>
                    <input class="form-control" asp-for="locations.Id" hidden />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 col-form-label" asp-for="locations.Location"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="locations.Location" oninput="this.value = this.value()" placeholder="Enter location here" />
                    <span asp-validation-for="locations.Location" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 col-form-label" asp-for="locations.Reason"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="locations.Reason" oninput="this.value = this.value()" placeholder="Reason" />
                    <span asp-validation-for="locations.Reason" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />
            <div>
                <input type="submit" class="btn btn-danger" asp-page-handler="Delete" value="Delete" id="Delete" />
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>