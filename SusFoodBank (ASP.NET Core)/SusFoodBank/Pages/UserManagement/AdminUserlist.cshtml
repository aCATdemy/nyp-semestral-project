@page
@model SusFoodBank.Pages.UserManagement.AdminUserlistModel
@{
	
}

<div class="container py-5 table table-responsive " style="overflow-x:auto;">
	<h1>List Of Users </h1>
	<div class="table table-dark overflow-auto" style="overflow-x:auto;">
		<table class="table table-striped table-hover overflow-auto ">
            <thead>
                <tr>
                    <th scope="col" >id</th>
					<th scope="col" style="width:300px">Fullname</th>
                    <th scope="col" >Gender</th>
					<th scope="col" style="width:300px">email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Allusers){
                <tr>
						<th scope="row"> <div class="text-overflow">@i.Id</div></th>
                    <td>@i.FullName</td>
                    <td>@i.Gender</td>
						<td ><div class="text-overflow">@i.Email</div></td>
					<td>
							<form asp-page-handler="UpdateAcc" method="post" class="align-self-center">
								<input type="hidden" hidden="hidden" value="@i.Id" name="id">
								<button class="btn btn-primary">Update</button>
						</form>
					</td>
					<td>
						@if (i.Deleted != true){
							<form asp-page-handler="DeleteAcc" method="post" class="align-self-center">
							<input type="hidden"  hidden="hidden" value="@i.Id" name="id">
								<button class="btn btn-danger">Delete</button>
							</form>
						}
						else {

								<form asp-page-handler="UnDeleteAcc" method="post" class="align-self-center">
									<input type="hidden" hidden="hidden" value="@i.Id" name="id">
									<button class="btn btn-danger">UnDelete</button>
								</form>
							
						}
					</td>
					<td>
							<form asp-page-handler="ChangePassword" method="post" class="align-self-center">
							<input type="hidden" hidden="hidden" value="@i.Id" name="id">
								<button class="btn btn-primary">Change Password</button>
						</form>
					</td>
					<td>
							@if (i.Suspended == true)
							{
								<form asp-page-handler="Unsuspend" method="post" class="align-self-center">
							<input type="hidden" hidden="hidden" value="@i.Id" name="id">
									<button class="btn btn-primary">Unsuspend</button>
								</form>
							}
							else
							{
								<form asp-page-handler="Suspend" method="post" class="align-self-center">
							<input type="hidden" hidden="hidden" value="@i.Id" name="id">
									<button class="btn btn-danger">suspend</button>
								</form>
							}
					</td>
                </tr>

                }
            </tbody>
        </table>

	</div>

</div>