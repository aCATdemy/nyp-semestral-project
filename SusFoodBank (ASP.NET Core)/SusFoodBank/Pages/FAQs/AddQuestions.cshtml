@page
@model SusFoodBank.Pages.FAQs.AddQuestionsModel
@{
    ViewData["Title"] = "Add Question";
}
<style>
* {
  box-sizing: border-box;
}
input[type=text], select, textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
}
label {
  padding: 12px 12px 12px 0;
  display: inline-block;
}
.col-20 {
  float: left;
  width: 20%;
  margin-top: 6px;
}

.col-80 {
  float: left;
  width: 80%;
  margin-top: 6px;
}
input[type=submit]:hover {
  background-color: #45a049;
}
.container2 {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
  outline:thin;
  outline-color:black;
  outline-width:thin;
}
a[id=Cancel]:hover {
    background-color: red
}

</style>

<div class="container container2" asp-validation-summary="All" class="text-danger">
<form class="mt-3" method="post">
    
        @await Html.PartialAsync("_FlashMessage")
    <h2>Add a Question</h2>
    <h4> You may ask any question that you may have that is related to foodbank or food donation here!</h4>
    <div class="row mb-3 ">
        <div class="col-20">
        <label class="col-sm-2 col-form-label" asp-for="Questions.Title"></label>
        </div>
        <div class="col-80">
                    <input class="form-control" type="text" asp-for="Questions.Title" oninput="this.value = this.value()" placeholder="The question you may have" />
            <span asp-validation-for="Questions.Title" class="text-danger"></span>
        </div>
    </div>
    @if (User.IsInRole("Admin"))
        {
            <div class="row mb-3">
                <div class="col-20">
        <label class="col-sm-2 col-form-label" asp-for="Questions.Description"></label>
        </div>
        <div class="col-80">
        <input class="form-control" type="text"  asp-for="Questions.Description" oninput="this.value = this.value()" placeholder="The question's description" />
         <span asp-validation-for="Questions.Description" class="text-danger"></span>
        </div>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="col-20">
        <label class="col-sm-2 col-form-label" asp-for="Questions.Description" hidden></label>
        </div>
        <div class="col-80">
        <input class="form-control" type="text"  asp-for="Questions.Description" oninput="this.value = this.value()" placeholder="The question's description" value="Will be answered soon" hidden/>
         <span asp-validation-for="Questions.Description" class="text-danger" hidden></span>
        </div>
            </div>
        }
        <div>
        <input type="submit" value="Add" class="btn btn-primary" />
         <a id="Cancel" class="btn btn-secondary ms-2" asp-page="/FAQs/ViewAllQuestions">Cancel</a>
    </div>

</form>
</div>
